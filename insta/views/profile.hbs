<hr/>
<div class="container">
    <div class="row">
        <div class="col-sm-3 col-md-6 col-lg-5 text-center">
            <img class="rounded-circle z-depth-20" alt="100x100" src={{profile}}
          data-holder-rendered="true" style="max-width: 150px; margin:6% 20%"/>
        </div>
        <div class="col-sm-3 col-md-6 col-lg-4 text-cente">
            <div class="row">
                <div class="col mt-5"><h3>{{handle}}</h3></div>
                {{#if flag}}
                    <div class="col mt-5"><a href="/unfollow/?id1={{id}}" class="btn btn-danger">Unfollow</a></div>
                {{else}}
                    <div class="col mt-5"><a href="/follow/?id1={{id}}" class="btn btn-primary">Follow</a></div>
                {{/if}}
            </div>
            <div class="row">
                <div class="col mt-2 text-center" style="margin-left: -8%;"><h7>1 Post</h7></div>
                <div class="col mt-2"><a href="/followers/?id1={{id}}"  style="text-decoration: none;color: inherit;"><h7>{{followers}} followers</h7></a></div>
                <div class="col mt-2"><a href="/following/?id1={{id}}"  style="text-decoration: none;color: inherit;"><h7>{{following}} following</h7></a></div>
            </div>
            <div class="row">
                <div class="col mt-3" style=""><b><h7>{{name}}</h7></b></div>
            </div>
        </div>
    </div>
    <hr/>
    {{#each post}}
        <div class="row mt-4">
            {{#each this}}
            <div class="col-sm-6 col-md-4 text-center">
                <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="{{this.post}}" alt="Card image cap">
                <div class="card-body">
                    <p class="card-text">{{this.comment}}</p>
                </div>
                </div>
            </div>
            {{/each}}
        </div>
    {{/each}}
</div>