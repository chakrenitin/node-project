<div class="card" style="width: 30rem;margin-top: 5%;max-height: 500px;overflow-y:scroll;margin-left:25%">
    <div class="card-body">
        <h5 class="card-title">{{com1.userId}}</h5>
        <h6 class="card-subtitle mb-2 text-muted">{{com1.comm}}</h6>
        <hr/>
        {{#each com1.arr}}
            <div class="ml-3"> 
                <div class="row">
                    <h7><b>{{this.userId}}</b> {{this.comm}}</h7>
                </div>
            </div>
            <hr/>
        {{/each}}

        <div>
            <form action="/postCom1/?cid={{cid}}" method="POST">
                <div class="row mt-3">
                    <input class="form-control ml-3" type="text" placeholder="Comment" style="width: 300px;" id="comm" name="comm">
                    <button type="submit" class="btn btn-primary ml-1">POST</button>
                </div>
            </form>
        </div>
    </div>
</div>